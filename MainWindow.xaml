<Window x:Class="D2Traderie.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:toolkit="clr-namespace:System.Windows.Controls;assembly=DotNetProjects.Input.Toolkit"
        xmlns:local="clr-namespace:D2Traderie"
        mc:Ignorable="d"
        Title="MainWindow" Height="765" Width="1366" Background="#FF18191A">

    <Window.Resources>

        <!-- Styl dla unidentified -->
        <Style x:Key="UnidentifiedStyle" TargetType="TextBlock">
            <Setter Property="Visibility" Value="Collapsed"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding NumericProperties}" Value="{x:Null}">
                    <Setter Property="Visibility" Value="Visible"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Styl TabItem -->
        <Style TargetType="{x:Type TabItem}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TabItem}">
                        <Border>
                            <Grid>
                                <Grid>
                                    <Border x:Name="border"
                                            CornerRadius="3,3,0,0"
                                            Background="#242526"/>
                                </Grid>
                                <ContentPresenter ContentSource="Header"
                                                  HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                  VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="LightGray"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="border" Property="Background" Value="LightGray"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Template listingu -->
        <DataTemplate x:Key="ListingTemplate">
            <Border BorderBrush="#FFD4CFAA" BorderThickness="0,0,0,1" Margin="0,0,0,5" Padding="5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Cena -->
                    <StackPanel Grid.Column="0" VerticalAlignment="Top">
                        <TextBlock Text="CENA" Foreground="#FFD4CFAA"
                                   FontFamily="./Resources/Fonts/#Exocet"
                                   FontSize="12" Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding PriceGroups}" Foreground="White"
                                   TextWrapping="Wrap" FontSize="13"/>
                    </StackPanel>

                    <!-- Właściwości -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Top">
                        <TextBlock Text="WŁAŚCIWOŚCI" Foreground="#FFD4CFAA"
                                   FontFamily="./Resources/Fonts/#Exocet"
                                   FontSize="12" Margin="0,0,0,5"/>
                        <TextBlock Text="⚠ UNIDENTIFIED"
                                   Style="{StaticResource UnidentifiedStyle}"
                                   Foreground="#FFFF6B35"
                                   FontFamily="./Resources/Fonts/#Exocet"
                                   FontSize="14"
                                   Margin="0,2,0,2"/>
                        <ItemsControl ItemsSource="{Binding NumericProperties}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Margin="0,2,0,2"
                                               Text="{Binding DisplayValue}"
                                               Foreground="#FFD4CFAA" FontSize="13"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>

                    <!-- Link -->
                    <TextBlock Grid.Column="2" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="10,0,0,0">
                        <Hyperlink NavigateUri="{Binding LisingURL}" RequestNavigate="Hyperlink_RequestNavigate">
                            🔗 Link
                        </Hyperlink>
                    </TextBlock>
                </Grid>
            </Border>
        </DataTemplate>

        <!-- Template właściwości itemu (panel prawy) -->
        <DataTemplate x:Key="PropertyNumberTemplate">
            <Border Padding="3,8,3,8" BorderBrush="#33D4CFAA" BorderThickness="0,0,0,1">
                <StackPanel>
                    <TextBlock Text="{Binding DisplayName}"
                               Foreground="#FFD4CFAA"
                               FontSize="13"
                               Margin="0,0,0,5"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Min" Foreground="#88D4CFAA"
                                       FontSize="10" HorizontalAlignment="Center"/>
                            <TextBox TextAlignment="Center"
                                     Text="{Binding Min, TargetNullValue=''}"
                                     Background="#FF18191A"
                                     Foreground="White"
                                     BorderBrush="#FFD4CFAA"
                                     Height="28"/>
                        </StackPanel>

                        <TextBlock Grid.Column="1" Text="—"
                                   Foreground="#FFD4CFAA"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   Margin="0,10,0,0"/>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Max" Foreground="#88D4CFAA"
                                       FontSize="10" HorizontalAlignment="Center"/>
                            <TextBox TextAlignment="Center"
                                     Text="{Binding Max, TargetNullValue=''}"
                                     Background="#FF18191A"
                                     Foreground="White"
                                     BorderBrush="#FFD4CFAA"
                                     Height="28"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>
        </DataTemplate>

        <DataTemplate x:Key="ListingNumberTemplate">
            <Grid Width="Auto">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0" Content="{Binding DisplayName, StringFormat=${0}:}" Foreground="White" FontSize="16"/>
                <Label Grid.Column="1" Content="{Binding Number}" FontSize="16" Foreground="White"/>
            </Grid>
        </DataTemplate>

        <local:PropertyTypeDataSelector x:Key="propertyTypeDataTemplateSelector"/>

    </Window.Resources>

    <Grid>
        <TabControl x:Name="tabControl" Background="#FF18191A">

            <!-- ==================== ZAKŁADKA LISTINGS ==================== -->
            <TabItem Header="Listings" Foreground="White" Margin="20,0,-30,0" Width="80">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>

                    <!-- LEWA: tytuł + lista listingów + depth -->
                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="60"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="45"/>
                        </Grid.RowDefinitions>

                        <Label Grid.Row="0"
                               FontFamily="./Resources/Fonts/#Exocet"
                               Content="Listings" FontSize="32"
                               Foreground="#FFD4CFAA"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>

                        <ListBox Grid.Row="1"
                                 HorizontalContentAlignment="Stretch"
                                 SelectedItem="{Binding Path=SelectedListing}"
                                 ItemsSource="{Binding Path=Listings}"
                                 ItemTemplate="{DynamicResource ListingTemplate}"
                                 x:Name="listingsListBox"
                                 Margin="10,0,10,0"
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                 ScrollViewer.VerticalScrollBarVisibility="Visible"
                                 Background="#FF242526"
                                 BorderBrush="#FFD4CFAA"/>

                        <StackPanel Grid.Row="2" Orientation="Horizontal"
                                    VerticalAlignment="Center" Margin="10,0,0,0">
                            <Label FontFamily="./Resources/Fonts/#Exocet"
                                   Content="Depth of search: " Foreground="White"/>
                            <TextBox Height="28" Width="40"
                                     Background="#FF242526"
                                     Foreground="White"
                                     BorderBrush="#FFD4CFAA"
                                     VerticalContentAlignment="Center"
                                     TextAlignment="Center"
                                     Text="{Binding DepthOfSearch}"/>
                        </StackPanel>
                    </Grid>

                    <!-- PRAWA: search + podgląd + właściwości + filter + sort -->
                    <Grid Grid.Column="1" Background="#FF1A1B1C">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="60"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Search bar -->
                        <Border Grid.Row="0" BorderBrush="#FFD4CFAA" BorderThickness="0,0,0,1" Padding="10,0,10,0">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <toolkit:AutoCompleteBox
                                    x:Name="SearchBar"
                                    SelectionChanged="OnItemNameSelectionChanged"
                                    ItemsSource="{Binding ItemNames}"
                                    SelectedItem="{Binding Path=SelectedItemName, Mode=TwoWay}"
                                    Text="Item name..."
                                    Height="32"
                                    Margin="0,0,10,0"/>
                                <Button x:Name="searchButton"
                                        FontFamily="./Resources/Fonts/#Exocet"
                                        Click="OnSearchButtonClicked"
                                        Content="Search"
                                        Height="32" Width="80"
                                        Background="#FF242526"
                                        Foreground="White"
                                        BorderBrush="#FFD4CFAA"/>
                            </StackPanel>
                        </Border>

                        <!-- Podgląd itemu: obrazek + nazwa -->
                        <Border Grid.Row="1" BorderBrush="#FFD4CFAA" BorderThickness="0,0,0,1" Padding="10">
                            <StackPanel Orientation="Horizontal">
                                <Image Width="80" Height="80" Stretch="Uniform"
                                       Source="{Binding SelectedItemImageURL}"
                                       Margin="0,0,15,0"/>
                                <TextBlock FontFamily="./Resources/Fonts/#Exocet"
                                           FontSize="24"
                                           Text="{Binding SelectedItemName}"
                                           Foreground="White"
                                           VerticalAlignment="Center"
                                           TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>

                        <!-- Właściwości itemu (min/max filtry) -->
                        <ListBox Grid.Row="2"
                                 ItemsSource="{Binding Path=SelectedItemProperties}"
                                 ItemTemplate="{StaticResource PropertyNumberTemplate}"
                                 Background="{x:Null}"
                                 BorderBrush="{x:Null}"
                                 Margin="5"
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                            <ListBox.Resources>
                                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="Transparent"/>
                                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="Black"/>
                                <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="Transparent"/>
                            </ListBox.Resources>
                        </ListBox>

                        <!-- Filter + Sort + przycisk -->
                        <Border Grid.Row="3" BorderBrush="#FFD4CFAA" BorderThickness="0,1,0,0" Padding="10">
                            <StackPanel>

                                <!-- Filter: runa + opcja -->
                                <Label FontFamily="./Resources/Fonts/#Exocet"
                                       Content="Filter" FontSize="20"
                                       Foreground="#FFD4CFAA"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,5"/>
                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <ComboBox Grid.Column="0"
                                              SelectedItem="{Binding SelectedRuneValue}"
                                              ItemsSource="{Binding Runes}"
                                              Margin="0,0,5,0"
                                              SelectedIndex="0"/>
                                    <ComboBox Grid.Column="1"
                                              SelectedItem="{Binding SelectedFilterOption}"
                                              ItemsSource="{Binding FilterOptions}"
                                              Margin="5,0,0,0"/>
                                </Grid>

                                <!-- Sort: opcja + właściwość -->
                                <Label FontFamily="./Resources/Fonts/#Exocet"
                                       Content="Sort" FontSize="20"
                                       Foreground="#FFD4CFAA"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,5"/>
                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <ComboBox Grid.Column="0"
                                              SelectedItem="{Binding SelectedSortOption}"
                                              ItemsSource="{Binding SortOptions}"
                                              Margin="0,0,5,0"/>
                                    <ComboBox Grid.Column="1"
                                              SelectedItem="{Binding SelectedSortProperty}"
                                              ItemsSource="{Binding SelectedItemPropertyNames}"
                                              Margin="5,0,0,0"/>
                                </Grid>

                                <!-- Przycisk Filter -->
                                <Button x:Name="filterButton"
                                        Click="OnFilterButtonClicked"
                                        Height="35"
                                        FontFamily="./Resources/Fonts/#Exocet"
                                        Content="Filter"
                                        Background="#FF242526"
                                        Foreground="White"
                                        BorderBrush="#FFD4CFAA"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Grid>
            </TabItem>

            <!-- ==================== ZAKŁADKA SEARCH OPTIONS ==================== -->
            <TabItem Header="Search Options" Foreground="White" Margin="40,0,-40,0" Height="20" Width="80">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="17*"/>
                        <ColumnDefinition Width="777*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Margin="0,0,-5,12" Grid.ColumnSpan="2">
                        <Border BorderThickness="1" Height="130" CornerRadius="3,3,3,3"
                                Background="#FF242526" Margin="15,15,15,0">
                            <StackPanel>
                                <StackPanel Height="30" Width="737">
                                    <Label x:Name="LabelSettings" Content="Filter Options"
                                           FontWeight="Normal" FontFamily="Arial" FontSize="16"
                                           Foreground="White" HorizontalAlignment="Center"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <StackPanel Orientation="Vertical" Width="100" Height="100">
                                        <Label x:Name="GeneralLabel" Content="General" HorizontalAlignment="Center" Foreground="White"/>
                                        <CheckBox x:Name="CheckBoxEtheral" Content="Etheral" Foreground="White" Margin="0,10,0,0" IsChecked="{Binding SearchSettings.Etheral}"/>
                                        <CheckBox x:Name="CheckBoxLadder" Content="Ladder" Foreground="White" IsChecked="{Binding SearchSettings.Ladder}"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Vertical" Width="100" Height="100">
                                        <Label x:Name="ModeLabel" Content="Mode" HorizontalAlignment="Center" Foreground="White"/>
                                        <RadioButton x:Name="RBSoftcore" Content="Softcore" GroupName="Mode" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,10,0,0" Foreground="White" IsChecked="{Binding SearchSettings.Softcore}"/>
                                        <RadioButton x:Name="RBSoftcore_Copy" Content="Hardcore" GroupName="Mode" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="White" IsChecked="{Binding SearchSettings.Hardcore}"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Vertical" Width="100" Height="100">
                                        <Label x:Name="RegionLabel" Content="Region" HorizontalAlignment="Center" Foreground="White"/>
                                        <CheckBox x:Name="CheckBoxAsia" Content="Asia" Foreground="White" HorizontalAlignment="Left" Margin="0,10,0,0" IsChecked="{Binding SearchSettings.Asia}"/>
                                        <CheckBox x:Name="CheckBoxAmerica" Content="America" Foreground="White" IsChecked="{Binding SearchSettings.America}"/>
                                        <CheckBox x:Name="CheckBoxEurope" Content="Europe" Foreground="White" IsChecked="{Binding SearchSettings.Europe}"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Vertical" Width="100" Height="100">
                                        <Label x:Name="IndentifiedLabel" Content="Identified" HorizontalAlignment="Center" Foreground="White" VerticalAlignment="Center"/>
                                        <RadioButton x:Name="RBIdentifiedAll" Content="All" GroupName="Identify" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,10,0,0" Foreground="White" IsChecked="{Binding SearchSettings.AllIdentified}"/>
                                        <RadioButton x:Name="RBIdentified" Content="Identified" GroupName="Identify" Foreground="White" HorizontalAlignment="Left" IsChecked="{Binding SearchSettings.Identified}"/>
                                        <RadioButton x:Name="RBUnidentified" Content="Unidentified" GroupName="Identify" Foreground="White" HorizontalAlignment="Left" IsChecked="{Binding SearchSettings.Unidentified}"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Vertical" Width="100" Height="100">
                                        <Label x:Name="MakeOffersLabel" Content="MakeOffers" HorizontalAlignment="Center" Foreground="White" VerticalAlignment="Center"/>
                                        <RadioButton x:Name="RBOffersAll" Content="All" GroupName="Makeoffers" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,10,0,0" Foreground="White" IsChecked="{Binding SearchSettings.AllOffers}"/>
                                        <RadioButton x:Name="RBOffersOnly" Content="Make offers" GroupName="Makeoffers" Foreground="White" HorizontalAlignment="Left" IsChecked="{Binding SearchSettings.MakeOffers}"/>
                                        <RadioButton x:Name="RBDefinedOffers" Content="Defined offers" GroupName="Makeoffers" Foreground="White" HorizontalAlignment="Left" IsChecked="{Binding SearchSettings.DefinedOffers}"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Vertical" Width="100" Height="100">
                                        <Label x:Name="UpgradedLabel" Content="Upgraded" HorizontalAlignment="Center" Foreground="White" VerticalAlignment="Center"/>
                                        <RadioButton x:Name="RBUpgradedAll" Content="All" GroupName="Upgraded" HorizontalAlignment="Left" Margin="0,10,0,0" Foreground="White" IsChecked="{Binding SearchSettings.AllUpgraded}"/>
                                        <RadioButton x:Name="RBUpgradedOnly" Content="Upgraded only" GroupName="Upgraded" Foreground="White" HorizontalAlignment="Left" IsChecked="{Binding SearchSettings.OnlyUpgraded}"/>
                                        <RadioButton x:Name="RBNotUpgraded" Content="Not upgraded" GroupName="Upgraded" Foreground="White" HorizontalAlignment="Left" IsChecked="{Binding SearchSettings.NotUpgraded}"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Vertical" Width="100" Height="100">
                                        <Label x:Name="PlatformLabel" Content="Platform" HorizontalAlignment="Center" Foreground="White" VerticalAlignment="Center"/>
                                        <RadioButton x:Name="RBPC" Content="PC" GroupName="Platform" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,10,0,0" Foreground="White" IsChecked="{Binding SearchSettings.PC}"/>
                                        <RadioButton x:Name="RBSwitch" Content="Switch" GroupName="Platform" Foreground="White" HorizontalAlignment="Left" IsChecked="{Binding SearchSettings.Switch}"/>
                                        <RadioButton x:Name="RBPlaystation" Content="Playstation" GroupName="Platform" Foreground="White" HorizontalAlignment="Left" IsChecked="{Binding SearchSettings.Playstation}"/>
                                        <RadioButton x:Name="RBXbox" Content="xBox" GroupName="Platform" Foreground="White" IsChecked="{Binding SearchSettings.xBox}"/>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <Label x:Name="label1" Content="Settings changes not implemented yet!"
                               FontSize="20" Foreground="Red"
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>

                        <Button x:Name="refreshDbButton"
                                Content="Refresh DB"
                                Click="OnRefreshDbClicked"
                                Height="40" Width="200"
                                FontFamily="./Resources/Fonts/#Exocet"
                                Foreground="White"
                                Background="#FF242526"
                                BorderBrush="#FFD4CFAA"
                                Margin="0,20,0,0"
                                HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </TabItem>

        </TabControl>

        <!-- Loading overlay -->
        <Grid x:Name="loadingOverlay" Visibility="Collapsed" Background="#AA000000">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <Label Content="Pobieranie danych..."
                       FontFamily="./Resources/Fonts/#Exocet"
                       Foreground="#FFD4CFAA" FontSize="24"
                       HorizontalAlignment="Center"/>
                <ProgressBar x:Name="progressBar"
                             IsIndeterminate="True"
                             Height="20" Width="400"
                             Foreground="#FFD4CFAA"
                             Background="#FF242526"
                             BorderBrush="#FFD4CFAA"
                             Margin="0,10,0,0"/>
                <Label x:Name="loadingStatusLabel"
                       Content=""
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Margin="0,5,0,0"/>
            </StackPanel>
        </Grid>

    </Grid>
</Window>
