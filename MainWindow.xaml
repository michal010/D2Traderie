<Window x:Class="D2Traderie.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:toolkit="clr-namespace:System.Windows.Controls;assembly=DotNetProjects.Input.Toolkit"
        xmlns:local="clr-namespace:D2Traderie"
        mc:Ignorable="d"
        Title="MainWindow" Height="765" Width="1366" Background="#FF18191A">

    <Window.Resources>

        <!-- Styl dla unidentified -->
        <Style x:Key="UnidentifiedStyle" TargetType="TextBlock">
            <Setter Property="Visibility" Value="Collapsed"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding NumericProperties}" Value="{x:Null}">
                    <Setter Property="Visibility" Value="Visible"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Styl TabItem -->
        <Style TargetType="{x:Type TabItem}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TabItem}">
                        <Border>
                            <Grid>
                                <Grid>
                                    <Border x:Name="border"
                                            CornerRadius="3,3,0,0"
                                            Background="#242526"/>
                                </Grid>
                                <ContentPresenter ContentSource="Header"
                                                  HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                  VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="LightGray"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="border" Property="Background" Value="LightGray"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Template listingu -->
        <DataTemplate x:Key="ListingTemplate">
            <Border BorderBrush="#FFD4CFAA" BorderThickness="0,0,0,1" Margin="0,0,0,5" Padding="5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Cena -->
                    <StackPanel Grid.Column="0" VerticalAlignment="Top">
                        <TextBlock Text="CENA" Foreground="#FFD4CFAA"
                                   FontFamily="./Resources/Fonts/#Exocet"
                                   FontSize="12" Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding PriceGroups}" Foreground="White"
                                   TextWrapping="Wrap" FontSize="13"/>
                    </StackPanel>

                    <!-- Właściwości -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Top">
                        <TextBlock Text="WŁAŚCIWOŚCI" Foreground="#FFD4CFAA"
                                   FontFamily="./Resources/Fonts/#Exocet"
                                   FontSize="12" Margin="0,0,0,5"/>
                        <TextBlock Text="⚠ UNIDENTIFIED"
                                   Style="{StaticResource UnidentifiedStyle}"
                                   Foreground="#FFFF6B35"
                                   FontFamily="./Resources/Fonts/#Exocet"
                                   FontSize="14"
                                   Margin="0,2,0,2"/>
                        <ItemsControl ItemsSource="{Binding NumericProperties}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Margin="0,2,0,2"
                                               Text="{Binding DisplayValue}"
                                               Foreground="#FFD4CFAA" FontSize="13"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>

                    <!-- Link -->
                    <TextBlock Grid.Column="2" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="10,0,0,0">
                        <Hyperlink NavigateUri="{Binding LisingURL}" RequestNavigate="Hyperlink_RequestNavigate">
                            🔗 Link
                        </Hyperlink>
                    </TextBlock>
                </Grid>
            </Border>
        </DataTemplate>

        <!-- Template właściwości itemu (panel prawy) -->
        <DataTemplate x:Key="PropertyNumberTemplate">
            <Border Padding="3,8,3,8" BorderBrush="#33D4CFAA" BorderThickness="0,0,0,1">
                <StackPanel>
                    <TextBlock Text="{Binding DisplayName}"
                               Foreground="#FFD4CFAA"
                               FontSize="13"
                               Margin="0,0,0,5"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Min" Foreground="#88D4CFAA"
                                       FontSize="10" HorizontalAlignment="Center"/>
                            <TextBox TextAlignment="Center"
                                     Text="{Binding Min, TargetNullValue=''}"
                                     Background="#FF18191A"
                                     Foreground="White"
                                     BorderBrush="#FFD4CFAA"
                                     Height="28"/>
                        </StackPanel>

                        <TextBlock Grid.Column="1" Text="—"
                                   Foreground="#FFD4CFAA"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   Margin="0,10,0,0"/>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Max" Foreground="#88D4CFAA"
                                       FontSize="10" HorizontalAlignment="Center"/>
                            <TextBox TextAlignment="Center"
                                     Text="{Binding Max, TargetNullValue=''}"
                                     Background="#FF18191A"
                                     Foreground="White"
                                     BorderBrush="#FFD4CFAA"
                                     Height="28"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>
        </DataTemplate>

        <DataTemplate x:Key="ListingNumberTemplate">
            <Grid Width="Auto">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0" Content="{Binding DisplayName, StringFormat=${0}:}" Foreground="White" FontSize="16"/>
                <Label Grid.Column="1" Content="{Binding Number}" FontSize="16" Foreground="White"/>
            </Grid>
        </DataTemplate>

        <local:PropertyTypeDataSelector x:Key="propertyTypeDataTemplateSelector"/>

    </Window.Resources>

    <Grid>
        <TabControl x:Name="tabControl" Background="#FF18191A">

            <!-- ==================== ZAKŁADKA LISTINGS ==================== -->
            <TabItem Header="Listings" Foreground="White" Margin="20,0,-30,0" Width="80">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>

                    <!-- LEWA: tytuł + lista listingów + depth -->
                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="60"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="45"/>
                        </Grid.RowDefinitions>

                        <Label Grid.Row="0"
                               FontFamily="./Resources/Fonts/#Exocet"
                               Content="Listings" FontSize="32"
                               Foreground="#FFD4CFAA"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>

                        <ListBox Grid.Row="1"
                                 HorizontalContentAlignment="Stretch"
                                 SelectedItem="{Binding Path=SelectedListing}"
                                 ItemsSource="{Binding Path=Listings}"
                                 ItemTemplate="{DynamicResource ListingTemplate}"
                                 x:Name="listingsListBox"
                                 Margin="10,0,10,0"
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                 ScrollViewer.VerticalScrollBarVisibility="Visible"
                                 Background="#FF242526"
                                 BorderBrush="#FFD4CFAA"/>

                        <StackPanel Grid.Row="2" Orientation="Horizontal"
                                    VerticalAlignment="Center" Margin="10,0,0,0">
                            <Label FontFamily="./Resources/Fonts/#Exocet"
                                   Content="Depth of search: " Foreground="White"/>
                            <TextBox Height="28" Width="40"
                                     Background="#FF242526"
                                     Foreground="White"
                                     BorderBrush="#FFD4CFAA"
                                     VerticalContentAlignment="Center"
                                     TextAlignment="Center"
                                     Text="{Binding DepthOfSearch}"/>
                        </StackPanel>
                    </Grid>

                    <!-- PRAWA: search + podgląd + właściwości + filter + sort -->
                    <Grid Grid.Column="1" Background="#FF1A1B1C">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="60"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Search bar -->
                        <Border Grid.Row="0" BorderBrush="#FFD4CFAA" BorderThickness="0,0,0,1" Padding="10,0,10,0">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <toolkit:AutoCompleteBox
                                    x:Name="SearchBar"
                                    SelectionChanged="OnItemNameSelectionChanged"
                                    ItemsSource="{Binding ItemNames}"
                                    SelectedItem="{Binding Path=SelectedItemName, Mode=TwoWay}"
                                    Text="Item name..."
                                    Height="32"
                                    Margin="0,0,10,0"/>
                                <Button x:Name="searchButton"
                                        FontFamily="./Resources/Fonts/#Exocet"
                                        Click="OnSearchButtonClicked"
                                        Content="Search"
                                        Height="32" Width="80"
                                        Background="#FF242526"
                                        Foreground="White"
                                        BorderBrush="#FFD4CFAA"/>
                            </StackPanel>
                        </Border>

                        <!-- Podgląd itemu: obrazek + nazwa -->
                        <Border Grid.Row="1" BorderBrush="#FFD4CFAA" BorderThickness="0,0,0,1" Padding="10">
                            <StackPanel Orientation="Horizontal">
                                <Image Width="80" Height="80" Stretch="Uniform"
                                       Source="{Binding SelectedItemImageURL}"
                                       Margin="0,0,15,0"/>
                                <TextBlock FontFamily="./Resources/Fonts/#Exocet"
                                           FontSize="24"
                                           Text="{Binding SelectedItemName}"
                                           Foreground="White"
                                           VerticalAlignment="Center"
                                           TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>

                        <!-- Właściwości itemu (min/max filtry) -->
                        <ListBox Grid.Row="2"
                                 ItemsSource="{Binding Path=SelectedItemProperties}"
                                 ItemTemplate="{StaticResource PropertyNumberTemplate}"
                                 Background="{x:Null}"
                                 BorderBrush="{x:Null}"
                                 Margin="5"
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                            <ListBox.Resources>
                                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="Transparent"/>
                                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="Black"/>
                                <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="Transparent"/>
                            </ListBox.Resources>
                        </ListBox>

                        <!-- Filter + Sort + przycisk -->
                        <Border Grid.Row="3" BorderBrush="#FFD4CFAA" BorderThickness="0,1,0,0" Padding="10">
                            <StackPanel>

                                <!-- Filter: runa + opcja -->
                                <Label FontFamily="./Resources/Fonts/#Exocet"
                                       Content="Filter" FontSize="20"
                                       Foreground="#FFD4CFAA"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,5"/>
                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <ComboBox Grid.Column="0"
                                              SelectedItem="{Binding SelectedRuneValue}"
                                              ItemsSource="{Binding Runes}"
                                              Margin="0,0,5,0"
                                              SelectedIndex="0"/>
                                    <ComboBox Grid.Column="1"
                                              SelectedItem="{Binding SelectedFilterOption}"
                                              ItemsSource="{Binding FilterOptions}"
                                              Margin="5,0,0,0"/>
                                </Grid>

                                <!-- Sort: opcja + właściwość -->
                                <Label FontFamily="./Resources/Fonts/#Exocet"
                                       Content="Sort" FontSize="20"
                                       Foreground="#FFD4CFAA"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,5"/>
                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <ComboBox Grid.Column="0"
                                              SelectedItem="{Binding SelectedSortOption}"
                                              ItemsSource="{Binding SortOptions}"
                                              Margin="0,0,5,0"/>
                                    <ComboBox Grid.Column="1"
                                              SelectedItem="{Binding SelectedSortProperty}"
                                              ItemsSource="{Binding SelectedItemPropertyNames}"
                                              Margin="5,0,0,0"/>
                                </Grid>

                                <!-- Przycisk Filter -->
                                <Button x:Name="filterButton"
                                        Click="OnFilterButtonClicked"
                                        Height="35"
                                        FontFamily="./Resources/Fonts/#Exocet"
                                        Content="Filter"
                                        Background="#FF242526"
                                        Foreground="White"
                                        BorderBrush="#FFD4CFAA"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Grid>
            </TabItem>

            <!-- ==================== ZAKŁADKA SEARCH OPTIONS ==================== -->
            <!-- Zastąp istniejący TabItem "Search Options" tym kodem -->
            <TabItem Header="Search Options" Foreground="White" Margin="40,0,-40,0" Height="20" Width="80">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Background="#FF18191A">
                    <StackPanel Margin="15,15,15,15">

                        <!-- PLATFORM -->
                        <Border BorderThickness="1" CornerRadius="3" Background="#FF242526"
                    BorderBrush="#55D4CFAA" Margin="0,0,0,10" Padding="12,10">
                            <StackPanel>
                                <Label Content="Platform" Foreground="#FFD4CFAA"
                           FontFamily="./Resources/Fonts/#Exocet" FontSize="14"
                           HorizontalAlignment="Center" Margin="0,0,0,6"/>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <CheckBox Content="PC"          Foreground="White" Margin="8,0" IsChecked="{Binding SearchSettings.PC}"/>
                                    <CheckBox Content="Switch"      Foreground="White" Margin="8,0" IsChecked="{Binding SearchSettings.Switch}"/>
                                    <CheckBox Content="Playstation" Foreground="White" Margin="8,0" IsChecked="{Binding SearchSettings.Playstation}"/>
                                    <CheckBox Content="Xbox"        Foreground="White" Margin="8,0" IsChecked="{Binding SearchSettings.xBox}"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- MODE -->
                        <Border BorderThickness="1" CornerRadius="3" Background="#FF242526"
                    BorderBrush="#55D4CFAA" Margin="0,0,0,10" Padding="12,10">
                            <StackPanel>
                                <Label Content="Mode" Foreground="#FFD4CFAA"
                           FontFamily="./Resources/Fonts/#Exocet" FontSize="14"
                           HorizontalAlignment="Center" Margin="0,0,0,6"/>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <RadioButton Content="Softcore" GroupName="Mode" Foreground="White" Margin="8,0"
                                     IsChecked="{Binding SearchSettings.Softcore}"/>
                                    <RadioButton Content="Hardcore" GroupName="Mode" Foreground="White" Margin="8,0"
                                     IsChecked="{Binding SearchSettings.Hardcore}"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- LADDER -->
                        <Border BorderThickness="1" CornerRadius="3" Background="#FF242526"
                    BorderBrush="#55D4CFAA" Margin="0,0,0,10" Padding="12,10">
                            <StackPanel>
                                <Label Content="Ladder" Foreground="#FFD4CFAA"
                           FontFamily="./Resources/Fonts/#Exocet" FontSize="14"
                           HorizontalAlignment="Center" Margin="0,0,0,6"/>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <CheckBox Content="Ladder"     Foreground="White" Margin="8,0" IsChecked="{Binding SearchSettings.Ladder}"/>
                                    <CheckBox Content="Non-Ladder" Foreground="White" Margin="8,0" IsChecked="{Binding SearchSettings.NonLadder}"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- GAME VERSION -->
                        <Border BorderThickness="1" CornerRadius="3" Background="#FF242526"
                    BorderBrush="#55D4CFAA" Margin="0,0,0,10" Padding="12,10">
                            <StackPanel>
                                <Label Content="Game Version" Foreground="#FFD4CFAA"
                           FontFamily="./Resources/Fonts/#Exocet" FontSize="14"
                           HorizontalAlignment="Center" Margin="0,0,0,6"/>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <CheckBox Content="Classic"              Foreground="White" Margin="8,0" IsChecked="{Binding SearchSettings.GameVersionClassic}"/>
                                    <CheckBox Content="Lord of Destruction"  Foreground="White" Margin="8,0" IsChecked="{Binding SearchSettings.GameVersionLOD}"/>
                                    <CheckBox Content="Reign of the Warlock" Foreground="White" Margin="8,0" IsChecked="{Binding SearchSettings.GameVersionROTW}"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- IDENTIFIED -->
                        <Border BorderThickness="1" CornerRadius="3" Background="#FF242526"
                    BorderBrush="#55D4CFAA" Margin="0,0,0,10" Padding="12,10">
                            <StackPanel>
                                <Label Content="Identified" Foreground="#FFD4CFAA"
                           FontFamily="./Resources/Fonts/#Exocet" FontSize="14"
                           HorizontalAlignment="Center" Margin="0,0,0,6"/>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <RadioButton Content="All"          GroupName="Identify" Foreground="White" Margin="8,0"
                                     IsChecked="{Binding SearchSettings.AllIdentified}"/>
                                    <RadioButton Content="Identified"   GroupName="Identify" Foreground="White" Margin="8,0"
                                     IsChecked="{Binding SearchSettings.Identified}"/>
                                    <RadioButton Content="Unidentified" GroupName="Identify" Foreground="White" Margin="8,0"
                                     IsChecked="{Binding SearchSettings.Unidentified}"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- ETHEREAL -->
                        <Border BorderThickness="1" CornerRadius="3" Background="#FF242526"
                    BorderBrush="#55D4CFAA" Margin="0,0,0,10" Padding="12,10">
                            <StackPanel>
                                <Label Content="Ethereal" Foreground="#FFD4CFAA"
                           FontFamily="./Resources/Fonts/#Exocet" FontSize="14"
                           HorizontalAlignment="Center" Margin="0,0,0,6"/>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <RadioButton Content="All"          GroupName="Ethereal" Foreground="White" Margin="8,0"
                                     IsChecked="{Binding SearchSettings.EtherealAll}"/>
                                    <RadioButton Content="Ethereal"     GroupName="Ethereal" Foreground="White" Margin="8,0"
                                     IsChecked="{Binding SearchSettings.Ethereal}"/>
                                    <RadioButton Content="Not Ethereal" GroupName="Ethereal" Foreground="White" Margin="8,0"
                                     IsChecked="{Binding SearchSettings.NotEthereal}"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- MAKE OFFER -->
                        <Border BorderThickness="1" CornerRadius="3" Background="#FF242526"
                    BorderBrush="#55D4CFAA" Margin="0,0,0,10" Padding="12,10">
                            <StackPanel>
                                <Label Content="Offers" Foreground="#FFD4CFAA"
                           FontFamily="./Resources/Fonts/#Exocet" FontSize="14"
                           HorizontalAlignment="Center" Margin="0,0,0,6"/>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <RadioButton Content="All"            GroupName="Offers" Foreground="White" Margin="8,0"
                                     IsChecked="{Binding SearchSettings.AllOffers}"/>
                                    <RadioButton Content="Make Offers"    GroupName="Offers" Foreground="White" Margin="8,0"
                                     IsChecked="{Binding SearchSettings.MakeOffers}"/>
                                    <RadioButton Content="Defined Offers" GroupName="Offers" Foreground="White" Margin="8,0"
                                     IsChecked="{Binding SearchSettings.DefinedOffers}"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">

                            <!-- Refresh DB z popupem potwierdzającym -->
                            <Button x:Name="refreshDbButton"
            Content="Refresh DB"
            Click="OnRefreshDbClicked"
            Height="40" Width="160"
            FontFamily="./Resources/Fonts/#Exocet"
            Foreground="White"
            Background="#FF242526"
            BorderBrush="#FFD4CFAA"
            Margin="0,0,10,0"/>

                            <!-- Refresh Values — pobiera aktualne ceny walut -->
                            <Button x:Name="refreshValuesButton"
            Content="Refresh Values"
            Click="OnRefreshValuesClicked"
            Height="40" Width="160"
            FontFamily="./Resources/Fonts/#Exocet"
            Foreground="White"
            Background="#FF242526"
            BorderBrush="#FFD4CFAA"/>

                        </StackPanel>


                    </StackPanel>
                </ScrollViewer>
            </TabItem>


        </TabControl>

        <!-- Loading overlay -->
        <Grid x:Name="loadingOverlay" Visibility="Collapsed" Background="#AA000000">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <Label Content="Pobieranie danych..."
                       FontFamily="./Resources/Fonts/#Exocet"
                       Foreground="#FFD4CFAA" FontSize="24"
                       HorizontalAlignment="Center"/>
                <ProgressBar x:Name="progressBar"
                             IsIndeterminate="True"
                             Height="20" Width="400"
                             Foreground="#FFD4CFAA"
                             Background="#FF242526"
                             BorderBrush="#FFD4CFAA"
                             Margin="0,10,0,0"/>
                <Label x:Name="loadingStatusLabel"
                       Content=""
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Margin="0,5,0,0"/>
            </StackPanel>
        </Grid>

    </Grid>
</Window>
