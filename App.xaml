<Application x:Class="D2Traderie.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:D2Traderie"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <FontFamily x:Key="Exocet">./Resources/Fonts/Exocet.ttf #Exocet</FontFamily>
        <Style TargetType="ListBox" x:Key="Test">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="Transparent"/>
                </Trigger>
                <!--<Trigger Property="Is" Value="True">
                <Setter Property="Background" Value="Transparent"/>
            </Trigger>-->
            </Style.Triggers>
        </Style>

    </Application.Resources>
</Application>
